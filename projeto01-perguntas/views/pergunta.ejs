<%- include('partials/header'); -%>
<%- include('partials/navbar'); -%>

<section class="container py-5">
  <h1><%= pergunta.titulo %></h1>
  <p><%= pergunta.descricao %></p>
  <hr>

  <form action="/responder" method="POST" class="my-5">
    <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
    <div class="form-group">
      <textarea name="conteudo" id="conteudo" placeholder="Digite sua resposta..." class="form-control" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
  </form>

  <h3>Respostas</h3>
  <hr>

  <% if(respostas.length > 0) { %>
    <% respostas.forEach(resposta => { %>
      <div class="card mt-4">
        <div class="card-body">
          <p><%= resposta.conteudo %></p>
        </div>
      </div>
    <% }); %>
  <% } else { %>
    <p>Ainda não há respostas. Seja o primeiro a responder.</p>
  <% } %>
</section>

<%- include('partials/footer'); -%>